
{
  "rules": {
    // default rules are false if not specified
    // setting these to true would make ALL CHILD PATHS readable/writable
    // ".read": false,
    // ".write": false,
    "drawing": {
      ".read": true,
      ".write": true,

      "$pixel": {
        // The key name must have the format "##:##" and the value must be a string of three characters
        ".validate": "$pixel.matches(/^\\d{1,2}:\\d{1,2}$/) && newData.isString() && newData.val().length === 3"
      }
    },

    "userInfo": {
      ".read": true,
      ".write": true
    }
  }
}